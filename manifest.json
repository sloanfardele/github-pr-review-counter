{
  "manifest_version": 3,
  "name": "GitHub PR Review Counter",
  "version": "1.0.0",
  "description": "Track pending PR reviews for your GitHub team members",
  "permissions": [
    "storage",
    "identity"
  ],
  "host_permissions": [
    "https://api.github.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
